<h1>Listing articles</h1>

<p class="btn"><%= link_to 'New article', new_article_path %></p>
<table>
  <tr>
    <th>Title</th>
    <th>Text</th>
    <th colspan="3"></th>
  </tr>

  <% @articles.each do |article| %>
  	<tr>
  		<td><%= article.title %></td>
  		<td><%= article.text %> </td>
  		<td class="btn-info"><%= link_to 'Show', article_path(article) %></td>
  		<td class="btn"><%= link_to 'Edit', edit_article_path(article)%></td>
  		<td class="btn-danger"><%= link_to 'Destroy', article_path(article),
  									method: :delete, data: {confirm: 'Are you sure?'} %></td>
  	</tr>
  <%end%>
 </table>